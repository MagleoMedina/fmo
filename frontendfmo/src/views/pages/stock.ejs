    <div class="modal fade" id="modalStock" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title fw-bold">üì• Ingreso de Inventario</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="formStock">
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Categor√≠a:</label>
                            <select class="form-select" id="selCategoria" onchange="cargarListaItems()">
                                <option value="COMPONENTE">Componente Interno (RAM, Disco, etc.)</option>
                                <option value="PERIFERICO">Perif√©rico (Mouse, Teclado, etc.)</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Tipo de Art√≠culo:</label>
                            <select class="form-select" id="selReferencia" required>
                                <option value="">Seleccione...</option>
                            </select>
                            <div class="form-text">Listado basado en la categor√≠a seleccionada.</div>
                        </div>

                        <div class="row g-2 mb-3">
                            <div class="col-6">
                                <label class="form-label fw-bold">Marca:</label>
                                <input type="text" class="form-control" id="inputMarca" placeholder="Ej: Kingston" required>
                            </div>
                            <div class="col-6">
                                <label class="form-label fw-bold">Modelo/Capacidad:</label>
                                <input type="text" class="form-control" id="inputModelo" placeholder="Ej: 8GB DDR4" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Cantidad Inicial:</label>
                            <input type="number" class="form-control" id="inputCantidad" value="1" min="1" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small">Alerta de Stock Bajo (M√≠nimo):</label>
                            <input type="number" class="form-control form-control-sm" id="inputMinimo" value="5">
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" onclick="guardarNuevoStock()">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/bootstrap/bootstrap.bundle.min.js"></script>
    <script>
        // --- VARIABLES GLOBALES (SIMULANDO DATOS DE BACKEND) ---
        // En producci√≥n, estas listas vendr√≠an de tus endpoints: /api/componentes y /api/perifericos
        let listaComponentesDB = []; 
        let listaPerifericosDB = [];
        
        // --- 1. CARGA INICIAL ---
        document.addEventListener('DOMContentLoaded', async () => {
            await cargarCatalogos(); // Cargar listas desplegables
            cargarStock();           // Cargar tabla principal
        });

        // Simulaci√≥n de carga de cat√°logos (Rellena esto con fetch a tu API)
        async function cargarCatalogos() {
            try {
                // Fetch real a tus endpoints existentes
                // const resComp = await fetch('/api/componentes'); listaComponentesDB = await resComp.json();
                // const resPeri = await fetch('/api/perifericos'); listaPerifericosDB = await resPeri.json();
                
                // DATA MOCK TEMPORAL PARA QUE FUNCIONE LA VISTA YA
                listaComponentesDB = [
                    {id: 3, nombre: 'MEMORIA RAM'}, {id: 4, nombre: 'DISCO DURO'}, 
                    {id: 5, nombre: 'TARJETA MADRE'}, {id: 8, nombre: 'FUENTE DE PODER'}
                ];
                listaPerifericosDB = [
                    {id: 1, nombre: 'MONITOR'}, {id: 2, nombre: 'TECLADO'}, 
                    {id: 3, nombre: 'MOUSE'}, {id: 4, nombre: 'REGULADOR'}
                ];
                
                cargarListaItems(); // Refrescar select del modal
            } catch (e) { console.error("Error cargando cat√°logos", e); }
        }

        // --- 2. L√ìGICA DEL MODAL ---
        function abrirModalAgregar() {
            document.getElementById('formStock').reset();
            cargarListaItems();
            new bootstrap.Modal(document.getElementById('modalStock')).show();
        }

        function cargarListaItems() {
            const categoria = document.getElementById('selCategoria').value;
            const select = document.getElementById('selReferencia');
            select.innerHTML = '<option value="">Seleccione...</option>';

            let datos = (categoria === 'COMPONENTE') ? listaComponentesDB : listaPerifericosDB;

            datos.forEach(item => {
                const opt = document.createElement('option');
                opt.value = item.id;
                opt.textContent = item.nombre;
                select.appendChild(opt);
            });
        }

        async function guardarNuevoStock() {
            // Recoger datos
            const payload = {
                categoria: document.getElementById('selCategoria').value,
                idReferencia: document.getElementById('selReferencia').value,
                marca: document.getElementById('inputMarca').value,
                modelo: document.getElementById('inputModelo').value,
                cantidad: parseInt(document.getElementById('inputCantidad').value),
                minimoAlerta: parseInt(document.getElementById('inputMinimo').value)
            };

            if(!payload.idReferencia || !payload.marca || payload.cantidad < 1) return alert("Complete los datos");

            // AQU√ç HAR√çAS EL POST A TU BACKEND
            // await fetch('/api/stock', { method: 'POST', body: JSON.stringify(payload) ... });

            alert("Item agregado correctamente");
            bootstrap.Modal.getInstance(document.getElementById('modalStock')).hide();
            cargarStock(); // Recargar tabla
        }

        // --- 3. L√ìGICA DE TABLAS Y RENDERIZADO ---
        async function cargarStock() {
            // Simulamos datos que vendr√≠an de SELECT * FROM control_stock
            // Debes hacer un JOIN en el backend para traer el nombre del componente/perif√©rico
            const mockStock = [
                { id: 1, categoria: 'COMPONENTE', nombreItem: 'MEMORIA RAM', marca: 'Kingston', modelo: '8GB DDR4', cantidad: 12, minimo: 5 },
                { id: 2, categoria: 'COMPONENTE', nombreItem: 'DISCO DURO', marca: 'Western Digital', modelo: '1TB HDD', cantidad: 2, minimo: 5 },
                { id: 3, categoria: 'PERIFERICO', nombreItem: 'MOUSE', marca: 'Genius', modelo: 'USB √ìptico', cantidad: 20, minimo: 10 },
                { id: 4, categoria: 'PERIFERICO', nombreItem: 'TECLADO', marca: 'Logitech', modelo: 'K120', cantidad: 4, minimo: 5 }
            ];

            const tbodyComp = document.getElementById('tablaComponentes');
            const tbodyPeri = document.getElementById('tablaPerifericos');
            tbodyComp.innerHTML = ''; 
            tbodyPeri.innerHTML = '';

            let totalItems = 0;
            let totalCritico = 0;

            mockStock.forEach(item => {
                totalItems += item.cantidad;
                
                // Determinar estado
                let estadoHtml = '<span class="badge bg-success">En Stock</span>';
                if (item.cantidad === 0) estadoHtml = '<span class="badge bg-danger">Agotado</span>';
                else if (item.cantidad <= item.minimo) {
                    estadoHtml = '<span class="badge badge-low-stock">Stock Bajo</span>';
                    totalCritico++;
                }

                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td class="fw-bold text-primary">${item.nombreItem}</td>
                    <td>
                        <div class="fw-bold">${item.marca}</div>
                        <small class="text-muted">${item.modelo}</small>
                    </td>
                    <td class="text-center">
                        <span class="fs-5 fw-bold">${item.cantidad}</span>
                    </td>
                    <td class="text-center">${estadoHtml}</td>
                    <td class="text-center">
                        <button class="btn btn-outline-danger btn-circle btn-sm me-1" onclick="modificarStock(${item.id}, -1)" title="Usar/Retirar">
                            <i class="fas fa-minus">-</i>
                        </button>
                        <button class="btn btn-outline-success btn-circle btn-sm" onclick="modificarStock(${item.id}, 1)" title="Agregar">
                            <i class="fas fa-plus">+</i>
                        </button>
                    </td>
                `;

                if (item.categoria === 'COMPONENTE') tbodyComp.appendChild(tr);
                else tbodyPeri.appendChild(tr);
            });

            // Actualizar tarjetas
            document.getElementById('totalItems').innerText = totalItems;
            document.getElementById('totalCritico').innerText = totalCritico;
        }

        // --- 4. MODIFICAR STOCK (USAR O REPONER) ---
        async function modificarStock(id, cantidad) {
            // Esta funci√≥n llama al backend para sumar o restar 1
            // await fetch(`/api/stock/${id}/ajustar?cantidad=${cantidad}`, { method: 'POST' });
            
            console.log(`Ajustando item ${id} en ${cantidad}`);
            // Recargamos para ver cambios (Simulado)
            alert("Stock actualizado (Simulaci√≥n)");
            cargarStock();
        }
    </script>
