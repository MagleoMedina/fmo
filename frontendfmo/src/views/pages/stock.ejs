                                    <thead>
                                        <tr>
                                            <th>Item</th>
                                            <th>Marca / Modelo</th>
                                            <th class="text-center">Stock Actual</th>
                                            <th class="text-center">Estado</th>
                                            <th class="text-center">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tablaPerifericos">
